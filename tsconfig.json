{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./app/*"
      ]
    },
    "lib": [
      "ES2019",
      "ES2020",
      "ES2021",
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
